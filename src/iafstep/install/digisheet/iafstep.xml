<?xml version="1.0"?>
<config 
    description = "iafStep Daemon configuration">
    <main
        run             = "1"
        schedule        = "10"
        service_name    = "iafstep"
        service_text    = "Manpower Ultrasource DataExchange Daemon"
        debug           = "1"
        trace_file      = "iafstep.log"
        resend          = "1"
    />      

    <email>
        <smtp
            server   = "bconms1.beacon-it.co.jp"
        />
        <pop3
            server   = "bconms1.beacon-it.co.jp"
            user     = "nishi"
            password = "XXXXXXXXX"
        />
        <!-- Alert is used to send system error report -->
        <alert
            to       = "systeme@manpowerinc.be"
            sender   = "email of alert sender"
        />
    </email>

    <directory
            to_send      = "out"
            when_receive = "in"
    />
    <sender
        name         = "digisheet"
        private_key  = "digisheet_priv.cert"
    />

    <recipient name     = "usdx">
        <transport type = "email">usdx@manpowerinc.be</transport>
        <key>usdx_pub.cert</key>
    </recipient>

    <recipient name     = "digisheet">
        <transport type = "email">nishi@aspex.co.jp</transport>
        <key>digisheet_pub.cert</key>
    </recipient>
</config>

